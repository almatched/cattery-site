---
import { Image } from "astro:assets";
import { storyblokEditable } from "@storyblok/astro";
import type { RelativeStoryblok } from "component-types-sb";

interface Props {
  language: string;
  blok: RelativeStoryblok;
}

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="flex flex-wrap gap-2 mb-10">
  <div class="aspect-[5/7] max-w-80 w-full rounded-md overflow-hidden">
    <Image
        src={blok.image?.filename}
        alt={blok.image?.alt ?? "image without description"}
        width={700}
        height={700}
        class="h-full w-full object-cover object-center"
        quality={80}
      />
  </div>
  <div>
    <h3>{blok.name}</h3>
    {blok.link.url.trim().length !== 0 
    && 
    (<a class="underline underline-offset-2" href=`/${blok.link.cached_url}`
    >More about me...</a>
    )}
  </div>
</section>
